<main class="max-w-5xl w-full mx-auto py-8">
  <div>
    <h1 class="text-center text-2xl font-semibold">
      POC: <%= @note.poc %>
    </h1>

    <p class="text-center mt-1">
      <span class="text-gray-600">Patient name:</span>
      <%= link_to @patient.name, patient_notes_path(@patient), class: "hover:text-blue-700" %>
    </p>
  </div>

  <div class="max-w-lg w-full mx-auto mt-8 divide-y space-y-3">
    <%= render @note.practice_words %>
  </div>
</main>
